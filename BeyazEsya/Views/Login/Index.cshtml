@model BeyazEsya.Dto.LoginDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h4 class="mb-0">Login</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Index" asp-controller="Login" method="post">

                                             

                      

                        <!-- Username -->
                        <div class="mb-3">
                            <label class="form-label">User Name</label>
                            <input type="text" class="form-control" asp-for="UserName" name="UserName" placeholder="Choose a username">
                        </div>

                       

                        <!-- Password -->
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" asp-for="Password" name="Password" placeholder="Enter password">
                        </div>

                      
                       

                        <button type="submit" class="btn btn-primary w-100">Register</button>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>


