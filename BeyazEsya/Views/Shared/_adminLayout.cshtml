<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid">
        <div class="row bg-primary mb-3">
            <div class="col-md-3">
                <h3 class="text-white">Admin Panel</h3>
            </div>
            <div class="col-md-9 d-flex flex-row-reverse">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Kullanıcı Adı:
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Siteyi Gör</a></li>
                        <li><a class="dropdown-item" href="#">Şifre Değiştir</a></li>
                        <li><a class="dropdown-item" href="#">Güvenli Çıkış</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3 border-end border-1 border-secondary">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                        Ana Menü
                    </a>
                    <a href="/Brands/Index" class="list-group-item list-group-item-action">Markalar</a>
                    <a href="/Customers/Index" class="list-group-item list-group-item-action">Müşteriler</a>
                    <a href="/Categories/Index" class="list-group-item list-group-item-action">Kategoriler</a>
                    <a href="/Products/Index" class="list-group-item list-group-item-action">Ürünler</a>
                    <a href="/ProductImages/Index" class="list-group-item list-group-item-action">Ürünler Resim</a>
                    <a href="#" class="list-group-item list-group-item-action disabled" aria-disabled="true">A disabled link item</a>
                </div>
            </div>
            <div class="col-md-9">
                @RenderBody()

            </div>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>